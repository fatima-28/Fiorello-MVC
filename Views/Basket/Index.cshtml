@using WebApp.ViewModels.Basket
@model IEnumerable<BasketFullInfoVM>
@{
    ViewData["Title"] = "Index";
    double totalPrc = 0;
}

<div class="container">
    <h1 class="text-center my-3">Products</h1>
    @if(Model.Count() > 0)
    {
        <div class="products-table">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Count</th>
                        <th scope="col">Total Price</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td><img style="width:75px;height:75px" src="~/img/@product.Image" /></td>
                            <td>@product.Name</td>
                            <td>@product.Price.ToString("0.#####") ₼</td>
                            <td>@product.Count</td>
                            <td>@product.TotalPrice $</td>
                            <td>
                          <a data-id="@product.Id" class="btn btn-danger delete-from-card" style="color:white">Delete</a>
                               
                            </td>
                        </tr>

                        totalPrc += product.TotalPrice;
                    }
                </tbody>
            </table>
            <h3>Total : @totalPrc $</h3>
           
            <button class="btn btn-warning reload-page d-none">Update Total Price</button>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
           Card is empty!
        </div>
    }
</div>

