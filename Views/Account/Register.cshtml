@using WebApp.ViewModels.Accounts
@model AccountVm

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Majestic Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/admin/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/admin/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/admin/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/admin/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <!-- partial:~/admin/partials/_navbar.html -->
        <!-- partial -->
        <!-- partial:~/admin/partials/_sidebar.html -->
        <!-- partial -->

        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Default form</h4>
                            <p class="card-description">
                                Basic form layout
                                <form class="forms-sample" method="post">
                                    <div class="form-group">
                                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                      
                                        <label asp-for="name">  Name</label>
                                        <input class="form-control" asp-for="name" placeholder="Name">
                                        <span class="text-danger" asp-validation-for="name"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="email">  Email</label>
                                        <input class="form-control" asp-for="email" placeholder="Email">
                                        <span class="text-danger" asp-validation-for="email"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="password">  Passwprd</label>
                                        <input class="form-control" asp-for="password" placeholder="Password">
                                        <span class="text-danger" asp-validation-for="password"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="UserName">  UserName</label>
                                        <input class="form-control" asp-for="UserName" placeholder="UserName">
                                        <span class="text-danger" asp-validation-for="UserName"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="checkpassword">  Confirm password</label>
                                        <input class="form-control" asp-for="checkpassword" placeholder="Confirm Password">
                                        <span class="text-danger" asp-validation-for="checkpassword"></span>
                                    </div>

                                    <button type="submit" class="btn btn-primary me-2">Sign Up</button>
                                    <a class="btn btn-light" asp-action="Login">Login</a>
                                </form>
                        </div>
                    </div>
                </div>




            </div>

        </div>
        <!-- main-panel ends -->
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/admin/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/admin/js/off-canvas.js"></script>
    <script src="~/admin/js/hoverable-collapse.js"></script>
    <script src="~/admin/js/template.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/admin/js/file-upload.js"></script>
    <!-- End custom js for this page-->
</body>

</html>
