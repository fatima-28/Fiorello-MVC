@model IEnumerable<Product>

@foreach (var product in Model)
{
    <div class=" mt-4 col-sm-6 col-md-4 col-lg-3 ">
        <div class="product-item text-center" data-id="@product.CategoryId">
            <div class="img">
                <a href="">
                    <img src="~/img/@product.Images.FirstOrDefault(m=>m.IsMain)?.Url" class="img-fluid" alt="">
                </a>
            </div>
            <div class="title mt-3">
                <h6>@product.Title</h6>
            </div>
            <div class="price">
                <input type="hidden" id="selected-product" value="@product.Id">
               
                <a data-id="@product.Id" class="text-black-50 add-card"  style="background:transparent;border:0;outline:none;cursor:pointer">Add to cart</a>
                <span class="text-black-50">$@product.Price</span>
            </div>
        </div>
    </div>
}
