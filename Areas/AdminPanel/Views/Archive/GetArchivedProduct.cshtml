@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";

    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">ARCHIVED PRODUCTS</h4>
               

                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    IMAGE
                                </th>
                                <th>
                                    TITLE
                                </th>
                                <th>
                                    PRICE
                                </th>
                                <th>
                                    CATEGORY
                                </th>


                                <th>
                                    SETTINGS
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/img/@product.Images.Where(m=>m.IsMain).FirstOrDefault().Url" />
                                    </td>
                                    <td>
                                        @product.Title
                                    </td>
                                    <td>
                                        $ @product.Price
                                    </td>
                                    <td>
                                        @product.Category.Name
                                    </td>

                                    <td class="">
                                       
                                        <a class="btn btn-sm btn-secondary d-flex justify-content-center align-items-center m-1 restore-item" style="width:20px;height:20px" data-id="@product.Id">
                                            <i class="fa-solid fa-rotate-left" style="color:white;font-size:16px"></i>

                                        </a>
                                    </td>

                                </tr>
                                count++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Script{
    <script src="~/js/antirefresh.js"></script>
}

