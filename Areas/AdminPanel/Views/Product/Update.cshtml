@using WebApp.Areas.AdminPanel.ViewModels.Products
@model Product
@{
    ViewData["Title"] = "Update";
    var categories = ViewBag.categories;
}
<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
              
                <div class="d-flex align-items-center ">
                    @foreach (var item in Model.Images)
                    {
                        <div style="width:200px; " class="m-1" >
                            <img class="img-fluid" src="~/img/@item.Url" />

                        </div>
                    }
                </div>
                <form method="post" enctype="multipart/form-data" asp-action="Update">

                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" asp-for="Title">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input class="form-control" asp-for="Price" type="number"  />
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                    <div class="form-group">
                        <label>Count</label>
                        <input class="form-control" asp-for="Count" type="number"  />
                        <span class="text-danger" asp-validation-for="Count"></span>
                    </div>
                    <select asp-for="CategoryId" class="form-control my-3 ">
                        @foreach (var item in categories)
                        {
                            <option class=" form-control" value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <button type="submit" class="btn btn-warning"><i class="feather mr-2 icon-check-circle"></i>Update</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="feather mr-2 icon-check-circle"></i>Cancel</a>
                </form>
            </div>
        </div>

    </div>
</section>


