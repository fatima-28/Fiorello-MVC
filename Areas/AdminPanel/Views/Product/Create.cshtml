@using WebApp.Areas.AdminPanel.ViewModels
@model ProductCreateVM
@{
    ViewData["Title"] = "Create";
    var categories = ViewBag.categories;
}
<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
                <div class="alert alert-warning" role="alert">
                    Be careful when choosing pictures. You cannot edit images after creating them.
                </div>
                <form method="post" enctype="multipart/form-data" asp-action="Create">
                    
                    <div class="form-group">
                        <label>Images</label>
                        <input class="form-control" asp-for="Photos">
                        <span class="text-danger" asp-validation-for="Photos"></span>
                    </div>
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" asp-for="Title">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input class="form-control" asp-for="Price" type="number" placeholder="5" />
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                    <div class="form-group">
                        <label>Count</label>
                        <input class="form-control" asp-for="Count" type="number" placeholder="1" />
                        <span class="text-danger" asp-validation-for="Count" ></span>
                    </div>
                    <select asp-for="CategoryId" class="form-control my-3 ">
                        @foreach (var item in categories)
                        {
                            <option class=" form-control" value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <button type="submit" class="btn btn-success"><i class="feather mr-2 icon-check-circle"></i>Create</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="feather mr-2 icon-check-circle"></i>Cancel</a>
                </form>
            </div>
        </div>

    </div>
</section>
