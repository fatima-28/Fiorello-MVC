@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";

    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">PRODUCTS</h4>
                <a class="btn btn-success" asp-action="Create">CREATE NEW PRODUCT</a>

                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                     IMAGE
                                </th>
                                <th>
                                    TITLE
                                </th>
                                <th>
                                     PRICE
                                </th>
                                <th>
                                     CATEGORY
                                </th>


                                <th>
                                    SETTINGS
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/img/@product.Images.Where(m=>m.IsMain).FirstOrDefault().Url" />
                                    </td>
                                      <td>
                                        @product.Title
                                    </td>
                                    <td>
                                       $ @product.Price
                                    </td>
                                    <td>
                                        @product.Category.Name
                                    </td>

                                    <td class="">
                                        <a class="btn btn-sm btn-danger d-flex justify-content-center align-items-center m-1 delete-item " style="width:20px;height:20px"  data-id="@product.Id">
                                            <i class="mdi mdi-delete-forever" style="color:white;font-size:16px"></i>
                                        </a>

                                        <a class="btn btn-sm btn-warning d-flex justify-content-center align-items-center m-1" style="width:20px;height:20px" asp-action="Update" asp-route-id="@product.Id">
                                            <i class="mdi mdi-lead-pencil" style="color:white;font-size:16px"></i>
                                        </a>
                                        <a class="btn btn-sm btn-primary d-flex justify-content-center align-items-center m-1" style="width:20px;height:20px" asp-action="Detail" asp-route-id="@product.Id">
                                            <i class="  fa-solid fa-circle-info" style="color:white;font-size:16px"></i>

                                        </a>
                                        <a class="btn btn-sm btn-secondary d-flex justify-content-center align-items-center m-1 archive-item" style="width:20px;height:20px" data-id="@product.Id">
                                            <i class="fa-regular fa-folder-open" style="color:white;font-size:16px"></i>

                                        </a>
                                    </td>

                                </tr>
                                count++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Script{
    <script src="~/js/antirefresh.js"></script>
}
